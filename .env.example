# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB=tyreplex

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost:9200

# Application Configuration
APP_ENV=development
APP_PORT=5000
DEBUG=True

# AWS Configuration (Optional - for production-grade voice)
# Get credentials from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_POLLY_VOICE_ID=Kajal
AWS_POLLY_ENGINE=neural

# Voice Options:
# - Development: Use Google TTS (free, no credentials needed)
# - Production: Use AWS Nova Sonic (best quality, requires AWS credentials)
